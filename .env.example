# ==========================================
# QUAYER - CONFIGURACAO DE AMBIENTE
# ==========================================
# Copie para .env: cp .env.example .env
# NUNCA commite o arquivo .env no Git!

# ==========================================
# APLICACAO
# ==========================================
# NODE_ENV is managed by Next.js automatically - do not set here
# For production builds, Next.js sets NODE_ENV=production automatically
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000
# HOSTNAME=0.0.0.0 (apenas em producao para Docker)

# ==========================================
# IGNITER.JS FRAMEWORK
# ==========================================
IGNITER_APP_NAME=quayer
NEXT_PUBLIC_IGNITER_API_URL=http://localhost:3000/
NEXT_PUBLIC_IGNITER_API_BASE_PATH=/api/v1
IGNITER_APP_SECRET=gere-com-openssl-rand-base64-32
IGNITER_JOBS_QUEUE_PREFIX=quayer
IGNITER_MCP_SERVER_BASE_PATH=/api/mcp
IGNITER_MCP_SERVER_TIMEOUT=3600000
IGNITER_LOG_LEVEL=info

# ==========================================
# SEGURANCA (JWT)
# ==========================================
# OBRIGATORIO: Gere com: openssl rand -base64 32
JWT_SECRET=gere-com-openssl-rand-base64-32
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
# Docker Compose padrao (dev)
DATABASE_URL=postgresql://docker:docker@localhost:5432/docker?schema=public
DB_NAME=docker
DB_USER=docker
DB_PASSWORD=docker

# ==========================================
# REDIS (Cache & Queue)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ==========================================
# EMAIL
# ==========================================
# Opcoes: mock | resend | smtp
# - mock: Apenas loga no console (dev)
# - resend: Servico Resend (prod)
# - smtp: SMTP generico
EMAIL_PROVIDER=mock
EMAIL_FROM=noreply@quayer.com

# Se usar SMTP:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# Se usar Resend:
RESEND_API_KEY=

# ==========================================
# WHATSAPP (UAZapi) - OBRIGATORIO
# ==========================================
UAZAPI_BASE_URL=https://quayer.uazapi.com
UAZAPI_ADMIN_TOKEN=
UAZAPI_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks/uazapi

# ==========================================
# OPENAI (Transcricao - Opcional)
# ==========================================
OPENAI_API_KEY=

# ==========================================
# CONCATENACAO DE MENSAGENS
# ==========================================
MESSAGE_CONCAT_TIMEOUT=8000
MESSAGE_CONCAT_MAX=10
MESSAGE_CONCAT_SAME_TYPE=false
MESSAGE_CONCAT_SAME_SENDER=true

# ==========================================
# GOOGLE OAUTH (Opcional)
# ==========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# ==========================================
# CRIPTOGRAFIA
# ==========================================
# Gere com: openssl rand -base64 32
ENCRYPTION_KEY=gere-com-openssl-rand-base64-32

# ==========================================
# TESTES (E2E)
# ==========================================
BASE_URL=http://localhost:3000
TEST_DATABASE_URL=postgresql://docker:docker@localhost:5432/docker_test?schema=public

# ==========================================
# PRODUCAO (Servidor com Supabase)
# ==========================================
# Para deploy em servidor que já tem Supabase:
# 1. Use docker-compose.quayer.yml (porta 5433 para PostgreSQL)
# 2. Configure .env no servidor com credenciais reais
# 3. Verifique se rede supabase_default existe
# 4. GitHub Secrets necessários: HOST, USERNAME, PASSWORD
